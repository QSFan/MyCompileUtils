<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/a"
    android:orientation="vertical"
    tools:context="com.qsfan.mycompileutils.MainActivity">

    <TextView
        android:id="@+id/tv_cehuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/shape10_red1_white"
        android:padding="5dp"
        android:text="测试滑动返回布局的接口" />

    <Button
        android:id="@+id/bt_get_v"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:text="哈哈" />

    <LinearLayout
        android:id="@+id/ll_add_permission"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#fff"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:text="添加权限"
            android:textSize="16sp" />

        <ImageView style="@style/ItemRightBlackGo" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:text="选择地址" />
</LinearLayout>
